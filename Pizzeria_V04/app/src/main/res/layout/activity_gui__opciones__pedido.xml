<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".GUI_OPCIONES_PEDIDO">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/carter_one"
        android:text="@string/strTvOpcionesPedido"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnEligeIngredientes"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/style_btn_bottom"
        android:fontFamily="@font/carter_one"
        android:text="@string/strBtnEligeIngredientes"
        android:textColor="@color/colorTexto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idBtnOpPediCasa"
        app:layout_constraintStart_toStartOf="@+id/idBtnOpPediCasa"
        app:layout_constraintTop_toBottomOf="@+id/idBtnOpPediCasa" />

    <Button
        android:id="@+id/idBtnFavoritaPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/style_btn_bottom"
        android:fontFamily="@font/carter_one"
        android:text="@string/strBtnFavorita"
        android:textColor="@color/colorTexto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idBtnEligeIngredientes"
        app:layout_constraintStart_toStartOf="@+id/idBtnEligeIngredientes"
        app:layout_constraintTop_toBottomOf="@+id/idBtnEligeIngredientes" />

    <Button
        android:id="@+id/idBtnOpPediCasa"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:background="@drawable/style_btn_bottom"
        android:fontFamily="@font/carter_one"
        android:text="@string/strBtnDeLaCasa"
        android:textColor="@color/colorTexto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>